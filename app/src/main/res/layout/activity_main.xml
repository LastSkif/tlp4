<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".MainActivity">

	<EditText android:id="@+id/Rule"
		android:hint="Правило"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"/>

	<EditText android:id="@+id/Read"
		android:hint="На считывание"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"/>

	<EditText android:id="@+id/Stek"
		android:hint="Стек"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"/>

	<EditText android:id="@+id/NextRule"
		android:hint="Следующее правило"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"/>

	<EditText android:id="@+id/Move"
		android:hint="Действие со стеком"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"/>

	<Button android:id="@+id/Add"
		android:text="Добавить"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"/>

	<Button android:id="@+id/NextButton"
		android:text="Дальше"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"/>

	<TextView
		android:id="@+id/text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"/>


</LinearLayout>